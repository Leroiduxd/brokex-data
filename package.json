{
  "name": "brokex-quant-analyzer",
  "version": "0.1.0",
  "description": "Brokex OHLC quant analyzer with technical indicators and HTTP endpoints",
  "main": "index.js",
  "private": true,
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon --watch index.js --watch data --ext js,json index.js",
